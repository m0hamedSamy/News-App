<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginVertical="10dp">

    <ImageView
        android:id="@+id/iv_RVItemImg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:src="@drawable/grim_reaper"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_RVItemText"/>

    <TextView
        android:id="@+id/tv_RVItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="temporary text"
        android:textSize="20sp"
        android:layout_marginStart="10dp"

        app:layout_constraintStart_toEndOf="@id/iv_RVItemImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>